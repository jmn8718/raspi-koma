<robot name="raspi_koma">

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry><box size="0.43 0.22 0.07"/></geometry>
      <material name="blue"><color rgba="0 0 0.8 1"/></material>
    </visual>
  </link>

  <link name="left_wheel">
    <visual>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry><cylinder length="0.03" radius="0.035"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="left_wheel"/>
    <origin xyz="-0.145 0.13 -0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry><cylinder length="0.03" radius="0.035"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="right_wheel"/>
    <origin xyz="-0.145 -0.13 -0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <geometry><box size="0.02 0.05 0.03"/></geometry>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/><child link="camera_link"/>
    <origin xyz="0.145 0 0.035" rpy="0 0 0"/>
  </joint>

  <!-- Front Layout -->
  <link name="front_left_wheel">
    <visual>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry><cylinder length="0.03" radius="0.035"/></geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="front_left_wheel"/>
    <origin xyz="0.095 0.13 -0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="front_right_wheel">
    <visual>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry><cylinder length="0.03" radius="0.035"/></geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="front_right_wheel"/>
    <origin xyz="0.095 -0.13 -0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Sensors -->
  <link name="sonar_front_left">
    <visual>
      <geometry><box size="0.01 0.02 0.01"/></geometry>
      <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <joint name="sonar_front_left_joint" type="fixed">
    <parent link="base_link"/><child link="sonar_front_left"/>
    <origin xyz="0.215 0.045 -0.02" rpy="0 0 0.436"/>
  </joint>

  <link name="sonar_front_right">
    <visual>
      <geometry><box size="0.01 0.02 0.01"/></geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="sonar_front_right_joint" type="fixed">
    <parent link="base_link"/><child link="sonar_front_right"/>
    <origin xyz="0.215 -0.045 -0.02" rpy="0 0 -0.436"/>
  </joint>

</robot>
