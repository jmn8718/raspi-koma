<?xml version="1.0"?>
<robot name="car" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="chassis_len" value="0.43"/>
  <xacro:property name="chassis_wid" value="0.22"/>
  <xacro:property name="chassis_hgt" value="0.07"/>
  <xacro:property name="wheel_radius" value="0.035"/>
  <xacro:property name="wheel_width" value="0.03"/>

  <material name="blue"><color rgba="0 0 0.8 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>

  <link name="base_link">
    <visual>
      <geometry><box size="${chassis_len} ${chassis_wid} ${chassis_hgt}"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><box size="${chassis_len} ${chassis_wid} ${chassis_hgt}"/></geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.009" ixy="0" ixz="0" iyy="0.032" iyz="0" izz="0.039"/>
    </inertial>
  </link>

  <xacro:macro name="wheel" params="prefix x y">
    <link name="${prefix}_wheel">
      <visual>
        <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
        <geometry><cylinder radius="${wheel_radius}" length="${wheel_width}"/></geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
        <geometry><cylinder radius="${wheel_radius}" length="${wheel_width}"/></geometry>
      </collision>
      <inertial>
        <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
        <mass value="0.2"/>
        <inertia ixx="0.00027" ixy="0" ixz="0" iyy="0.00027" iyz="0" izz="0.00049"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="${x} ${y} -0.025" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="front_left"  x="0.095"  y="0.13"/>
  <xacro:wheel prefix="front_right" x="0.095"  y="-0.13"/>
  <xacro:wheel prefix="rear_left"   x="-0.145" y="0.13"/>
  <xacro:wheel prefix="rear_right"  x="-0.145" y="-0.13"/>

  <link name="camera_link">
    <visual><geometry><box size="0.02 0.05 0.03"/></geometry></visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.145 0 0.035" rpy="0 0 0"/>
  </joint>

  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <xacro:macro name="sonar" params="prefix y_offset yaw">
    <link name="${prefix}_sensor">
      <visual>
        <geometry><box size="0.01 0.02 0.01"/></geometry>
        <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
      </visual>
      <collision>
        <geometry><box size="0.01 0.02 0.01"/></geometry>
      </collision>
    </link>
    <joint name="${prefix}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${prefix}_sensor"/>
      <origin xyz="0.215 ${y_offset} -0.02" rpy="0 0 ${yaw}"/>
    </joint>
  </xacro:macro>

  <xacro:sonar prefix="front_left_sonar"  y_offset="0.045"  yaw="0.436"/>  <xacro:sonar prefix="front_right_sonar" y_offset="-0.045" yaw="-0.436"/>

  <gazebo>
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu">
    </plugin>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>front_left_wheel_joint</left_joint>
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <wheel_separation>0.26</wheel_separation>
      <wheel_radius>0.07</wheel_radius>
      <topic>/cmd_vel</topic>
      <odom_topic>/model/car/odometry</odom_topic>
      <tf_topic>/model/car/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

  <gazebo reference="camera_link">
    <sensor name="camera" type="camera">
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip><near>0.1</near><far>100</far></clip>
      </camera>
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <topic>camera/image_raw</topic>
    </sensor>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <pose>0 0 0 0 0 0</pose>
      <always_on>1</always_on>
      <update_rate>20</update_rate>
      <visualize>true</visualize>
      <topic>imu/data_raw</topic>
    </sensor>
  </gazebo>

  <gazebo reference="front_left_sonar_sensor">
    <sensor name="front_left_ultrasonic" type="sonar">
      <pose>0 0 0 0 0 0</pose>
      <always_on>1</always_on>
      <update_rate>20</update_rate>
      <visualize>false</visualize>
      <topic>/ultrasonic/front_left</topic>
      <frame_id>front_left_sonar_sensor</frame_id>
      <sonar>
        <min>0.02</min>
        <max>4.0</max>
        <radius>0.88</radius>
      </sonar>
    </sensor>
  </gazebo>

  <gazebo reference="front_right_sonar_sensor">
    <sensor name="front_right_ultrasonic" type="sonar">
      <pose>0 0 0 0 0 0</pose>
      <always_on>1</always_on>
      <update_rate>20</update_rate>
      <visualize>false</visualize>
      <topic>/ultrasonic/front_right</topic>
      <frame_id>front_right_sonar_sensor</frame_id>
      <sonar>
        <min>0.02</min>
        <max>4.0</max>
        <radius>0.88</radius>
      </sonar>
    </sensor>
  </gazebo>

</robot>
